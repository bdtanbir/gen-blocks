{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "genblocks/simple-card",
    "version": "1.0.0",
    "title": "Simple Card",
    "category": "genblocks",
    "icon": "text-page",
    "description": "A simple card with title and description.",
    "keywords": ["card", "title", "description", "genblocks", "simple"],
    "textdomain": "gen-blocks",
    "attributes": {
        "title": {
            "type": "string",
            "default": ""
        },
        "description": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "anchor": true,
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        },
        "typography": {
            "fontSize": true
        }
    },
    "example": {
        "attributes": {
            "title": "Welcome to GenBlocks",
            "description": "This is a simple card block with a title and description. You can customize the content in the editor."
        }
    },
    "editorScript": "genblocks-editor",
    "editorStyle": "genblocks-editor-style",
    "style": "genblocks-blocks"
}
